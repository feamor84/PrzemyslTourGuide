<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Drawer menu styles -->
    <!-- Menu item -->
    <style name="menuItemContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/itemHeight</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="menuIconContainer">
        <item name="android:layout_width">@dimen/iconContainerWidth</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">@dimen/defaultItemSpace</item>
    </style>

    <style name="menuIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="menuText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/itemFontSize</item>
    </style>

    <!-- content cards -->
    <!-- vertical card -->
    <style name="verticalCardLinearLayout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="verticalImageCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/vertical_card_image_view_height</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="cardVertical">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/default_margin</item>
        <item name="android:layout_marginRight">@dimen/default_margin</item>
        <item name="android:layout_marginTop">@dimen/default_margin_half</item>
        <item name="android:layout_marginBottom">@dimen/default_margin_half</item>
        <item name="android:background">@android:color/white</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
    </style>

    <style name="cardVerticalHeading">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:textSize">@dimen/vertical_card_heading</item>
    </style>

    <style name="cardVerticalDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/card_divider_height</item>
        <item name="android:background">@color/cardDivider</item>
    </style>

    <!-- horizontal card -->
    <style name="horizontalCardLinearLayout">
        <item name="android:layout_height">@dimen/horizontal_card_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="horizontalImageCard">
        <item name="android:layout_width">@dimen/horizontal_card_image_view_width</item>
        <item name="android:layout_height">@dimen/horizontal_card_image_view_height</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="cardHorizontal">
        <item name="android:layout_height">@dimen/horizontal_card_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/default_margin</item>
        <item name="android:layout_marginRight">@dimen/default_margin</item>
        <item name="android:layout_marginTop">@dimen/default_margin_half</item>
        <item name="android:layout_marginBottom">@dimen/default_margin_half</item>
        <item name="android:background">@android:color/white</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
    </style>

    <style name="cardHorizontalHeading">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingLeft">@dimen/default_padding</item>
        <item name="android:textSize">@dimen/horizontal_card_heading</item>
        <item name="android:gravity">center_vertical|left</item>
    </style>

    <!-- single place item -->
    <style name="singleItemContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="singleItemContainer.linearLayout">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="singleItemImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="singleItemHeading">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:textSize">@dimen/single_heading_text_size</item>
    </style>

    <style name="singleItemText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/default_padding</item>
        <item name="android:paddingRight">@dimen/default_padding</item>
        <item name="android:textSize">@dimen/single_text_text_size</item>
    </style>

</resources>
